<UserControl x:Class="FlightSimulator.Views.ConnectAndSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Canvas>
            <Button Canvas.Left="130" Canvas.Top="10" Content="Connect" Background="Pink" Command="{Binding Path=ClickCommand}"/>
            <Button Canvas.Left="200" Canvas.Top="10" Content="Settings" Background="Pink" Click="Settings_button"/>
            <Button Canvas.Left="270" Canvas.Top="10" Content="Disconnect" Background="Pink" Command="{Binding Path=Disconnect}"/>
        </Canvas>
    </Grid>
</UserControl>
